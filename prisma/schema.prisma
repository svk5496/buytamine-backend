// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int               @id @default(autoincrement())
  firstName       String
  lastName        String?
  username        String            @unique
  email           String            @unique
  password        String
  bio             String?
  avatar          String?
  productclicks   ProductClick[]
  healthGoalClick HealthGoalClick[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

model Product {
  id                        Int               @id @default(autoincrement())
  name                      String            @unique
  price                     Int?
  noUserClick               Int               @default(0)
  thumbnail                 String?
  coupangLink               String?
  coupangReviewCount        Int?              @default(0)
  totalReview               Int?              @default(0)
  productListReportNo       String?
  shape                     String?
  prmsDate                  String?
  lastUpdateDate            String?
  productShapeConditionName String?
  licenseNo                 String?
  brand                     Brand?            @relation(fields: [brandId], references: [id])
  brandId                   Int?
  dispos                    String?
  expireDate                String?
  howKeep                   String?
  howTake                   String?
  intakeAttentions          IntakeAttention[] //서취시 주의사항
  rawMaterials              RawMaterial[] //원료
  primaryFunctions          PrimaryFunction[] //핵심기능
  mainStandards             MainStandard[] //기능원료
  nutrients                 Nutrient[] //기능원료
  healthGoals               HealthGoal[] //증상
  productClicks             ProductClick[]
  createdAt                 DateTime          @default(now())
  updatedAt                 DateTime          @updatedAt
}

model Brand {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  bio       String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]
}

model IntakeAttention {
  id              Int       @id @default(autoincrement())
  intakeAttention String    @unique
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  products        Product[]
}

model RawMaterial {
  id          Int       @id @default(autoincrement())
  rawMaterial String    @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]
}

model PrimaryFunction {
  id              Int        @id @default(autoincrement())
  primaryFunction String     @unique
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  products        Product[]
  nutrients       Nutrient[]
}

model MainStandard {
  id           Int       @id @default(autoincrement())
  mainStandard String    @unique
  products     Product[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model HealthGoal {
  id               Int               @id @default(autoincrement())
  name             String
  link             String?
  products         Product[]
  iconSmall        String?
  iconMedium       String?
  iconLarge        String?
  bio              String?
  rank             Int               @default(autoincrement())
  healthGoalClicks HealthGoalClick[]
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
}

model Nutrient {
  id               Int               @id @default(autoincrement())
  name             String
  bio              String?
  banner           String?
  link             String?
  products         Product[]
  primaryFunctions PrimaryFunction[]
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
}

model ProductClick {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  product   Product? @relation(fields: [productId], references: [id])
  productId Int?
}

model HealthGoalClick {
  id           Int         @id @default(autoincrement())
  user         User?       @relation(fields: [userId], references: [id])
  userId       Int?
  healthGoal   HealthGoal? @relation(fields: [healthGoalId], references: [id])
  healthGoalId Int?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}
